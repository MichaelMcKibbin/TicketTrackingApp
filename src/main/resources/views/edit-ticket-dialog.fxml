<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.tickettracking.EditTicketDialogController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <GridPane hgap="10" vgap="10">
        <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="titleField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Status:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="statusComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Priority:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="priorityComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Assigned To:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ComboBox fx:id="assignedToComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Description:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextArea fx:id="descriptionArea" GridPane.rowIndex="4" GridPane.columnIndex="1" prefRowCount="3"/>

        <Label text="Comments:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <VBox GridPane.rowIndex="5" GridPane.columnIndex="1">
            <ListView fx:id="commentsListView" prefHeight="100"/>
            <HBox spacing="5">
                <TextField fx:id="newCommentField" promptText="Add a comment..." HBox.hgrow="ALWAYS"/>
                <Button text="Add" onAction="#handleAddComment"/>
            </HBox>
        </VBox>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Save" onAction="#handleSave"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>

